<android.support.v7.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/pref_category_file_explorer">

        <SwitchPreferenceCompat
            android:key="ALLOW_CREATING_FILES"
            android:defaultValue="true"
            android:title="@string/pref_allowCreatingFiles_title"
            android:summary="@string/pref_allowCreatingFiles_summary"/>

        <SwitchPreferenceCompat
            android:key="SHOW_HIDDEN_FILES"
            android:defaultValue="false"
            android:title="@string/pref_showHiddenFiles_title"
            android:summary="@string/pref_showHiddenFiles_summary"/>

        <ListPreference
            android:key="FILE_SORT_MODE"
            android:defaultValue="SORT_BY_NAME"
            android:entries="@array/files_sort"
            android:entryValues="@array/files_sort_values"
            android:title="@string/pref_sortMode_title"/>

    </PreferenceCategory>

</android.support.v7.preference.PreferenceScreen>