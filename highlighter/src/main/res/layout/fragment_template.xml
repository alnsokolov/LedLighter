<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_almost_medium">

    <android.support.v7.widget.CardView
        xmlns:platform="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/padding_almost_large"
        android:layout_marginRight="@dimen/padding_almost_medium"
        android:layout_marginLeft="@dimen/padding_almost_medium"
        android:layout_marginTop="@dimen/padding_almost_medium"
        platform:cardBackgroundColor="?attr/colorDocBackground"
        platform:cardCornerRadius="@dimen/padding_small"
        platform:contentPadding="@dimen/padding_almost_large"
        platform:cardElevation="@dimen/padding_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.KillerBLS.modpeide.widget.CodeTemplateView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/code_view"
                android:layerType="software"
                android:bufferType="spannable"
                android:background="?attr/colorDocBackground"
                android:textColor="?attr/colorDocText"
                android:textSize="12sp"
                android:scrollbarStyle="insideInset"
                android:gravity="top|start"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>